{
  // Logging configuration for the application
  "Logging": {
    "LogLevel": {
      // Default log level for all categories
      "Default": "Information",
      // Log level specifically for Microsoft.AspNetCore components
      "Microsoft.AspNetCore": "Warning"
    }
  },
  // Specifies which hosts are allowed to access the application
  "AllowedHosts": "*",
  // Connection strings for database access
  "ConnectionStrings": {
    // Default connection string for the Evently database using localdb
    "DefaultConnection": "Data Source=(localdb)\\MSSQLLocalDB;Database=Evently;Integrated Security=True;Connect Timeout=30;Encrypt=False;Trust Server Certificate=False;Application Intent=ReadWrite;Multi Subnet Failover=False"
  },
  // JWT authentication settings
  "jwt": {
    // Secret key used to sign JWT tokens
    "Key": "this_is_a_very_long_and_secure_jwt_secret_key_123!",
    // Issuer of the JWT tokens
    "Issuer": "Evently",
    // Audience for the JWT tokens
    "Audience": "EventlyUsers"
  },
  // Email settings for sending emails from the application
  "EmailSetting": {
    // Email address used as the sender
    "From": "youremail@example.com",
    // SMTP server address
    "SmtpServer": "smtp.gmail.com",
    // Port used for SMTP server
    "Port": "465",
    // Username for SMTP authentication
    "Username": "youremail@example.com",
    // Password or app password for SMTP authentication
    "Password": "your_app_password"
  }
}
